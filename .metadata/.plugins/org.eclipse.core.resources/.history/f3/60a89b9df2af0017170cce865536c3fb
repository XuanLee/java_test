package java_iO_day3;

import java.io.File;

public class test_main {
	//源路径
	static final String SRC_PATH = "/Users/lee/Desktop/tmp";
	//目标路径
	static final String DESC_PATH = "/Users/lee/Desktop/test1";
	public static void main(String[] args) {
		File srcFile = new File(SRC_PATH);
		File descFile =new File(DESC_PATH);
		if(srcFile.isFile() && descFile.isFile()){
			System.out.println(true);
		}
		getAll(srcFile);
	}
	static void getAll(File file){
		File[] files=file.listFiles();
		for (File file2 : files) {
			//判断有没有目录
			if(file2.isDirectory()){
				getAll(file2);
			}
			//拿到所有文件
			else {
			 Filtrate(file2.getName()); 	
			}
		}
	}
	/*过滤文件*/
	static void Filtrate(String fileName){
		//0.记录个数
		int count=0;
		//1.找到 . 出现的最后一次位置
		int index=fileName.lastIndexOf(".");
		//2.截取后缀名
		String srcStr=fileName.substring(index+1);
		if("txt".equals(srcStr)){
			System.out.println(fileName);
		}
		//System.out.printf(".txt文件出现个数为:%d",count);
	}
}
