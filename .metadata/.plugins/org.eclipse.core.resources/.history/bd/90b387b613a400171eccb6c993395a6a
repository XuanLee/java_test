		//将字符串转换为数组
		String strArray[]=str.split("");
		System.out.println("请输入字符");
		String char1=input.next();
		// 	取出第一个字符
		String fristStr=char1.charAt(0)+"";
		System.out.println(fristStr);
		
		String tmp = "";
		for (int i = 0; i < strArray.length; i++) {
			if (strArray[i].equals(fristStr)) {
				System.out.println(i);
				tmp = str.substring(i, char1.length());
				System.out.println("截取的字符串:"+tmp);
			}
		}

	}
