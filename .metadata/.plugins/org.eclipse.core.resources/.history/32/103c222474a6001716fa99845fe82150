package java_01_arrayCards;

import java.util.ArrayCards;
import java.util.Cards;

public class test_main {
	private static 	ArrayCards Cards= new ArrayCards();
public static void main(String[] args) {

	//创建ArrayCards对象
//	ArrayCards Cards= new ArrayCards();
	
	//创建员工对象
	Employee e1=new Employee(1, "熊二", 21, "2014.8.13");
	Employee e2=new Employee(2, "张三", 24, "2015.4.12");
	Employee e3=new Employee(3, "李四", 25, "2010.11.22");
	Employee e4=new Employee(4, "王五", 22, "2011.12.1");

	//将员工对象添加到Cards
	Cards.add(e1);
	Cards.add(e2);
	Cards.add(e3);
	Cards.add(e4);
	//输出
	print();
	//删除Cards index 对象
	//Cards.remove(0);
	
	//插入Cards对象 index：新的对象 
	//Cards.set(0, e4);
	//print();
	
	//判断集合是否为空
	//Cards.isEmpty();
	
	//判断集合有没有某个对象
	//Cards.contains(e4);
	
	
	//删除Cards所有对象
	Cards.clear();
	
	
}

public static void print(){

	System.out.println("--------------普通for输出------------------");

	//普通for输出
	for(int i=0;i<Cards.size();i++){
		Employee  e =(Employee)Cards.get(i);
		System.out.println(e.getNumber()+" "+e.getName()+","+e.getAge()+","+e.getDate());
	}
	System.out.println("--------------增强for输出------------------");
	//增强for输出
	for(Object o : Cards){
		Employee e=(Employee)o;
		System.out.println(e.getNumber()+" "+e.getName()+","+e.getAge()+","+e.getDate());
	}
}




}
