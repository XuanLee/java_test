package java_02_Landlords_1;

import java.util.ArrayList;

public class CardsTool {
	private ArrayList list;
	private int card;
	
	/**组装牌*/
	public static void initList(ArrayList list){
			for (int j = 0; j < 4; j++) {
				for (int i = 3; i <= 15; i++) {
					list.add(i);
				}
			}
			list.add(16);
			list.add(17);
	}
	
	/**遍历*/
	public static void traverse(ArrayList list){
			for (int i = 0; i < 54; i++) {
				if (i % 13== 0)
					System.out.println();
				System.out.print(list.get(i)+",");
			}
			System.out.println();
	}
	
	/**准备洗牌*/
	public static void  setoutShuffle(int count){
			// 2.0获得随机数
			for (int i = 0; i < count; i++) {
				int num1 = (int) (Math.random() * 54 + 1);
				int num2 = (int) (Math.random() * num1 + 1);
//				System.out.println("第"+(i+1)+"次的随机数" + num1);
//				System.out.println("第"+(i+1)+"次的随机数" + num2);
				shuffle(num2,num1, null);
			}
			bottomCards.add(list.get(51));
			bottomCards.add(list.get(52));
			bottomCards.add(list.get(53));
	}
	
	
	/**洗牌*/
	public static void shuffle(int n,int n1,ArrayList list){
		// 2.1 取出集合下标n到n1 添加到tmp集合
		ArrayList<Integer> tmp = new ArrayList<Integer>();
		for (int i = n; i < n1; i++) {
			tmp.add((Integer) list.get(i));
		}

		// 2.2删除list集合n~n1
		for (int i = n; i < n1; i++) {
			int a1 = (Integer) list.remove(n);
		//	System.out.println(a1);
		}
		
		//2.3将tmp集合添加到list数组后面
		for(int i=0;i<tmp.size();i++){
			list.add(tmp.get(i));
		}
		//traverse();
	}
}
