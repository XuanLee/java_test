package java_01_linklCards;

import java.util.LinkedCards;

import java_01_arrayCards.Employee;

public class test_main {
public static void main(String[] args) {

	//创建集合对象
	LinkedCards Cards=new LinkedCards();
	
	//创建员工对象
		Employee e1=new Employee(1, "熊二", 21, "2014.8.13");
		Employee e2=new Employee(2, "张三", 24, "2015.4.12");
		Employee e3=new Employee(3, "李四", 25, "2010.11.22");
		Employee e4=new Employee(4, "王五", 22, "2011.12.1");

		//将员工对象添加到Cards
		Cards.add(e1);
		Cards.add(e2);
		Cards.add(e3);
		Cards.add(e4);
		
		
//		//离职
//		Cards.remove(e1);
//		//离职最后一个
//		Cards.removeLast();
		
		//添加
		Cards.add(e1);
		//添加对象到最前面一个
		Cards.addFirst(e4);
		
		
		
		
		System.out.println("--------------普通for输出------------------");

		//普通for输出
		for(int i=0;i<Cards.size();i++){
			Employee  e =(Employee)Cards.get(i);
			System.out.println(e.getNumber()+" "+e.getName()+","+e.getAge()+","+e.getDate());
		}
		System.out.println("--------------增强for输出------------------");
		//增强for输出
		for(Object o : Cards){
			Employee e=(Employee)o;
			System.out.println(e.getNumber()+" "+e.getName()+","+e.getAge()+","+e.getDate());
		}
}
}
