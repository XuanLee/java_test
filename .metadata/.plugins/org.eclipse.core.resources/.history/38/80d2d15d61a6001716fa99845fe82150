package java_02_Landlords;

import java.util.ArrayList;
import java.util.Random;

/*
 * 把集合这块，我们做个小练习，模拟斗地主洗牌发牌
功能：按照斗地主的规则，完成洗牌、发牌的动作。
具体规则：
	1. 组装54张扑克牌
            2. 将54张牌顺序打乱
	3. 三个玩家参与游戏，三人交替摸牌，每人17张牌，最后三张留作底牌。
	4. 查看三人各自手中的牌（按照牌的大小排序）、底牌

并且看牌的时候扑克牌从大到小的摆放顺序：大王,小王,2,A, K, Q, J, 10, 9,8,7,6,5,4,3
                                   17 ,16 ,15 14 13 12 11 10                               
 */
public class L_main {
	static 	ArrayList<Integer> list=new ArrayList<Integer>();
public static void main(String[] args) {

	//1.组装牌
		for (int j = 0; j < 4; j++) {
			for (int i = 3; i <= 17; i++) {
				list.add(i);
			}
		}
		// 按照二维数组遍历
		traverse();
		// 2.准备洗牌
		setoutShuffle();
		// 按照二维数组遍历
		traverse();
}

public static void traverse(){
	for (int j = 0; j < 4; j++) {
		for (int i = 0; i <= 14; i++) {
			System.out.print(list.get(i)+",");
		}
		System.out.println();
	}
}

/**准备洗牌*/
public static void  setoutShuffle(int count){
		// 2.0获得随机数
		for (int i = 0; i < count; i++) {
			int num1 = (int) (Math.random() * 54 + 1);
			System.out.println("第"+(i+1)+"次的随机数" + num1);
			shuffle(num1);
		}	
}
/**洗牌*/
public static void shuffle(int n){
	// 2.1 取出集合下标0到n 添加到tmp集合
	ArrayList<Integer> tmp = new ArrayList<Integer>();
	for (int i = 0; i < n; i++) {
		tmp.add(list.get(i));
	}

	// 2.2删除list集合前n位
	for (int i = 0; i < n; i++) {
		int a1 = list.remove(0);
	}
	
	//2.3将tmp集合添加到list数组后面
	for(int i=0;i<tmp.size();i++){
		list.add(tmp.get(i));
	}
	
}



}
