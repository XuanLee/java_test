package java_02_StringBuffer_test;

import java.util.ArrayList;
import java.util.Scanner;

//21342134  8 5 2  8-(0,1,2)*3
//j=8/3=2 0 ,1 2, for(j=0;j<strBuffer.length()/3;j++)
//           8:strBuffer.length()-j*3
//01234567
//     2,5
public class insert_main {
	public static void main(String[] args) {
		
		Scanner input =new Scanner (System.in);
		String str="";
		System.out.println("请输入一串数字");
		str=input.nextLine();
		
		StringBuffer strBuffer=new StringBuffer(str);
//		strBuffer.insert(1, ',');
//		System.out.println(strBuffer);
	    ArrayList list=new ArrayList();
		for(int j=0;j<strBuffer.length()/3;j++){
			list.add(j);
			System.out.println(j);
		}
		for(int i=strBuffer.length();i>0;i--)
		{				
			if(i>3)
				strBuffer.insert(i, ',');
			if(i<3)
				break;
		}
		System.out.println(strBuffer);
	}
}
